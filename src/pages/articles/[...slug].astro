---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map((article) => ({
    params: { slug: article.id },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await render(article);
---

<BaseLayout
  title={article.data.title}
  description={article.data.description}
  type="article"
  publishedDate={article.data.date}
>
  <article class="article">
    <header class="article-header">
      <time datetime={article.data.date}>{article.data.date}</time>
      <h1>{article.data.title}</h1>
      <div class="tags">
        {article.data.tags.map((tag: string) => (
          <a href={`/tags/${tag}`} class="tag">#{tag}</a>
        ))}
      </div>
    </header>
    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .article-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }
  time {
    font-size: 0.875rem;
    color: #9ca3af;
  }
  h1 {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0.5rem 0 1rem;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .tag {
    font-size: 0.75rem;
    color: #2563eb;
    text-decoration: none;
    background: #eff6ff;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
  }
  .tag:hover {
    background: #dbeafe;
  }

  .prose :global(h2) {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
    padding-top: 1rem;
  }
  .prose :global(h3) {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1.5rem 0 0.5rem;
  }
  .prose :global(p) {
    margin: 0.75rem 0;
    line-height: 1.8;
    color: #374151;
  }
  .prose :global(ul),
  .prose :global(ol) {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
  }
  .prose :global(li) {
    margin: 0.375rem 0;
    line-height: 1.7;
    color: #374151;
  }
  .prose :global(blockquote) {
    border-left: 3px solid #2563eb;
    padding: 0.5rem 1rem;
    margin: 1rem 0;
    background: #f9fafb;
    color: #4b5563;
  }
  .prose :global(strong) {
    font-weight: 600;
    color: #111827;
  }
  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }
  .prose :global(code) {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.9375rem;
  }
  .prose :global(th),
  .prose :global(td) {
    border: 1px solid #e5e7eb;
    padding: 0.5rem 0.75rem;
    text-align: left;
  }
  .prose :global(th) {
    background: #f9fafb;
    font-weight: 600;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 1.375rem;
    }
  }
</style>
